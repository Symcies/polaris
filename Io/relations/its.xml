<?xml version="1.0" ?>
<root>
	<type name="Component" pragma="object">
		<field name="id" type="int" pragma="id"/>
		<field name="name" type="std::string"/>>
		<field name="icon" type="std::string"/>
		<field name="instances" type="std::vector&lt;weak_ptr&lt;Instance&gt; &gt;" pragma="inverse(component)"/>
		<field name="actions" type="std::vector&lt;weak_ptr&lt;Action&gt; &gt;" pragma="inverse(component)"/>
		<field name="keys" type="std::vector&lt;shared_ptr&lt;Component_Key&gt; &gt;"/>		
	</type>
	<type name="Component_Key" pragma="object">
		<field pragma="id" name="key" type="std::string"/>>
		<field name="value_type" type="std::string"/>
		<field name="value_constraint" type="std::string"/>
		<field name="is_state" type="bool"/>
		<field name="required" type="bool"/>
		<field name="note" type="std::string"/>
	</type>
	<type name="Instance" pragma="object">
		<field name="id" type="int" pragma="id auto"/>
		<field name="component" type="shared_ptr&lt;Component&gt;" pragma="not_null"/>
		<field name="location_link" type="int"/>
		<field name="location_offset" type="float"/>
		<field name="location_x" type="float"/>
		<field name="location_y" type="float"/>
		<field name="owner" type="std::string"/>
		<field name="operational_status" type="int"/>
		<field name="schedule" type="std::string"/>
		<field name="values" type="std::vector&lt;shared_ptr&lt;Instance_Value&gt; &gt;" />		
	</type>	
	<type name="Instance_Value" pragma="object">
		<field name="id" type="int" pragma="id auto"/>
		<field name="key" type="shared_ptr&lt;Component_Key&gt;"/>
		<field name="value" type="std::string"/>
	</type>			
	<type name="Action" pragma="object">
		<field name="id" type="int" pragma="id"/>
		<field name="component" type="shared_ptr&lt;Component&gt;" pragma="not_null"/>
		<field name="keys" type="std::vector&lt;shared_ptr&lt;Action_Key&gt; &gt;"/>	
		<field name="name" type="std::string"/>
		<field name="note" type="std::string"/>
	</type>
	<type name="Action_Key" pragma="object">
		<field name="id" type="int" pragma="id"/>
		<field name="key" type="std::string"/>
		<field name="value_type" type="std::string"/>
		<field name="value_constraint" type="std::string"/>
		<field name="required" type="bool"/>		
		<field name="note" type="std::string"/>
	</type>		
</root>